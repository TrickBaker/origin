<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@id/main_layout_chartY"
        android:layout_width="22.0dip"
        android:layout_height="fill_parent"
        android:layout_alignBottom="@id/main_layout"
        android:gravity="start|bottom|center"
        android:minWidth="22.0dip"
        android:orientation="vertical">

        <TextView
            android:id="@id/main_chartY_textView_v1"
            android:layout_width="wrap_content"
            android:layout_height="0.0dip"
            android:layout_weight="2.0"
            android:gravity="center"
            android:textColor="@color/main_chart_axis_color"
            android:textSize="@dimen/main_temprature_showtext_size" />

        <TextView
            android:id="@id/main_chartY_textView_v2"
            android:layout_width="wrap_content"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:gravity="center"
            android:textColor="@color/main_chart_axis_color"
            android:textSize="@dimen/main_temprature_showtext_size" />

        <TextView
            android:id="@id/main_chartY_textView1"
            android:layout_width="wrap_content"
            android:layout_height="0.0dip"
            android:layout_weight="2.0"
            android:gravity="center"
            android:textColor="@color/main_chart_axis_color"
            android:textSize="@dimen/main_temprature_showtext_size" />

        <TextView
            android:id="@id/main_chartY_textView2"
            android:layout_width="wrap_content"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:gravity="center"
            android:textColor="@color/main_chart_axis_color"
            android:textSize="@dimen/main_temprature_showtext_size" />

        <TextView
            android:id="@id/main_chartY_textView3"
            android:layout_width="wrap_content"
            android:layout_height="0.0dip"
            android:layout_weight="2.0"
            android:gravity="center"
            android:textColor="@color/main_chart_axis_color"
            android:textSize="@dimen/main_temprature_showtext_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/main_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/main_chart_table_height"
        android:layout_gravity="center_horizontal"
        android:layout_toRightOf="@id/main_layout_chartY"
        android:background="@drawable/grid"
        android:orientation="vertical" />
</merge>