<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/divider_ad"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@id/complete_scrollview_item_layout_click"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        android:orientation="horizontal">

        <com.andexert.library.RippleView
            android:id="@id/complete_help_ripple_whole"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal"
            android:paddingBottom="12.0dip"
            android:paddingTop="@dimen/genera_margin"
            app:rv_color="@color/ripple_color_whitebutton">

            <ImageView
                android:id="@id/complete_scrollview_item_imageview_icon"
                android:layout_width="@dimen/icon_size_huge"
                android:layout_height="@dimen/icon_size_huge"
                android:layout_gravity="start"
                android:layout_marginLeft="@dimen/genera_margin"
                android:layout_marginRight="12.0dip"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_question_mark" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/genera_margin"
                android:layout_toRightOf="@id/complete_scrollview_item_imageview_icon"
                android:gravity="start"
                android:orientation="vertical">

                <TextView
                    android:id="@id/complete_scrollview_item_textView_appname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:textColor="@color/genera_tipsAndLabelName_color"
                    android:textSize="@dimen/complete_list_textsize_appname" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8.0dip">

                    <TextView
                        android:id="@id/complete_scrollview_item_textView_show"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lineSpacingMultiplier="1.2"
                        android:maxLines="2"
                        android:textColor="@color/genera_showtext_color"
                        android:textSize="@dimen/complete_list_textsize_ShowAndPercent" />
                </LinearLayout>

                <com.andexert.library.RippleView
                    android:id="@id/complete_help_ripple_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/complete_list_btsolve_height"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/genera_margin"
                    android:orientation="horizontal"
                    android:paddingLeft="12.0dip"
                    android:paddingRight="12.0dip"
                    app:rv_color="@color/ripple_color_whitebutton">

                    <TextView
                        android:id="@id/complete_scrollview_item_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="@string/cooling_item_button"
                        android:textColor="@color/complete_list_textcolor_btsolve"
                        android:textSize="16.0sp" />
                </com.andexert.library.RippleView>
            </LinearLayout>
        </com.andexert.library.RippleView>
    </LinearLayout>
</LinearLayout>