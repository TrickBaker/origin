<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@drawable/popupbox"
    android:gravity="center|top"
    android:orientation="vertical"
    android:paddingLeft="40.0dip"
    android:paddingRight="40.0dip">

    <TextView
        android:id="@id/dialog_booster_warning_textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24.0dip"
        android:text="@string/dialog_booster_warning_title"
        android:textColor="#ff000000"
        android:textSize="20.0sp" />

    <TextView
        android:id="@id/dialog_booster_warning_textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16.0dip"
        android:layout_marginTop="24.0dip"
        android:text="@string/dialog_booster_warning_entity"
        android:textColor="#ff005598"
        android:textSize="16.0sp" />

    <com.andexert.library.RippleView
        android:id="@id/dialog_booster_warning_textView_btrate"
        android:layout_width="wrap_content"
        android:layout_height="36.0dip"
        android:layout_gravity="end"
        android:layout_marginBottom="38.0dip"
        android:layout_marginRight="-8.0dip"
        android:gravity="center"
        android:paddingLeft="35.0dip"
        android:paddingRight="35.0dip"
        app:rv_color="@color/ripple_color_whitebutton">

        <TextView
            android:id="@id/dialog_booster_warning_textView_btrate_text"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="end"
            android:gravity="center"
            android:text="@string/help_actionbar_btknoew"
            android:textColor="#ff0091ea"
            android:textSize="16.0sp" />
    </com.andexert.library.RippleView>
</LinearLayout>