<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/secondaryProgress">
        <rotate android:duration="30" android:fromDegrees="0.0" android:toDegrees="360.0" android:pivotX="50.0%" android:pivotY="50.0%">
            <shape android:shape="ring" android:innerRadiusRatio="2.55" android:thicknessRatio="24.0" android:useLevel="false">
                <gradient android:startColor="#00cccccc" android:endColor="#ffcccccc" android:useLevel="false" android:type="sweep" android:centerColor="#08cccccc" />
            </shape>
        </rotate>
    </item>
</layer-list>