<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <rotate android:duration="30" android:fromDegrees="0.0" android:toDegrees="360.0" android:pivotX="50.0%" android:pivotY="50.0%" android:repeatCount="infinite">
            <shape android:shape="ring" android:innerRadiusRatio="3.0" android:thicknessRatio="10.0" android:useLevel="false">
                <gradient android:startColor="#ff004073" android:endColor="#ff004073" android:useLevel="false" android:type="sweep" />
            </shape>
        </rotate>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <rotate android:duration="30" android:fromDegrees="0.0" android:toDegrees="360.0" android:pivotX="50.0%" android:pivotY="50.0%">
            <shape android:shape="ring" android:innerRadiusRatio="2.55" android:thicknessRatio="24.0" android:useLevel="false">
                <gradient android:startColor="#00cccccc" android:endColor="#00cccccc" android:useLevel="false" android:type="sweep" android:centerColor="#00cccccc" />
            </shape>
        </rotate>
    </item>
    <item android:id="@android:id/progress">
        <rotate android:duration="30" android:fromDegrees="0.0" android:toDegrees="360.0" android:pivotX="50.0%" android:pivotY="50.0%">
            <shape android:shape="ring" android:innerRadiusRatio="3.0" android:thicknessRatio="14.0" android:useLevel="false">
                <gradient android:startColor="#ffffffff" android:endColor="#ffffffff" android:useLevel="false" android:type="sweep" android:centerColor="#ffffffff" />
            </shape>
        </rotate>
    </item>
</layer-list>